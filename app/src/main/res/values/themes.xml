<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProductivityApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f86f64</item>
        <item name="colorPrimaryVariant">#fa627a</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProductivityApp" parent="Base.Theme.ProductivityApp" />
    <style name="ProgressBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fa627a</item>
        <item name="colorPrimaryVariant">#fa627a</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#fa627a</item>
        <item name="colorSecondaryVariant">#fa627a</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize the background color -->
        <item name="android:windowBackground">@color/darkBlue</item>
        <!-- Customize the text color of the time values -->
        <item name="android:textColorPrimary">@color/darkBlue</item>
        <!-- Customize the text color of the AM/PM labels -->
        <item name="android:textColorSecondary">@color/darkBlue</item>
        <item name="colorAccent">@color/medPink</item>
        <item name="android:divider">@color/medPink</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:headerBackground">@color/medPink</item>
    </style>
</resources>